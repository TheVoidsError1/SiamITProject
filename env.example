# SiamIT Leave Management System Environment Configuration
# Copy this file to .env.local and fill in your values

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# Application Configuration
VITE_APP_NAME=SiamIT Leave Management
VITE_APP_VERSION=1.0.0
VITE_DEBUG=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
VITE_UPLOAD_PATH=/uploads
VITE_PUBLIC_PATH=/public

# Authentication Configuration
VITE_TOKEN_KEY=token
VITE_REFRESH_TOKEN_KEY=refreshToken
VITE_TOKEN_EXPIRY=3600000
VITE_REFRESH_TOKEN_EXPIRY=86400000

# UI Configuration
VITE_THEME=system
VITE_LANGUAGE=th
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm
VITE_TIMEZONE=Asia/Bangkok

# Notification Configuration
VITE_NOTIFICATION_POSITION=top-right
VITE_NOTIFICATION_DURATION=5000
VITE_MAX_NOTIFICATIONS=5

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_ANALYTICS=false

# Development Configuration
VITE_DEV_SERVER_PORT=8081
VITE_DEV_SERVER_HOST=localhost
